# Google Cloud Text-to-Speech Chirp3HD 設定
# 実際の値は .env ファイルに設定してください（Gitには含めないでください）

# Google Cloud プロジェクトID
REACT_APP_GOOGLE_CLOUD_PROJECT_ID=your-project-id-here

# Google Cloud サービスアカウントキーファイルのパス
REACT_APP_GOOGLE_CLOUD_KEY_FILE=path/to/your/service-account-key.json

# 追加設定（オプション）
REACT_APP_GOOGLE_CLOUD_REGION=us-central1
REACT_APP_TTS_DEFAULT_VOICE=neural2-a
REACT_APP_TTS_DEFAULT_QUALITY=premium

# デバッグ設定
REACT_APP_DEBUG_TTS=false
REACT_APP_ENABLE_TTS_METRICS=true

# キャッシュ設定
REACT_APP_TTS_CACHE_SIZE=1000
REACT_APP_TTS_CACHE_DURATION=604800000